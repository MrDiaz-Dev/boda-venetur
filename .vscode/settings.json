{
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	// "editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "makefile.configureOnOpen": true,
    "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#ff3333",
      "activityBar.background": "#ff3333",
      "activityBar.foreground": "#e7e7e7",
      "activityBar.inactiveForeground": "#e7e7e799",
      "activityBarBadge.background": "#00df00",
      "activityBarBadge.foreground": "#15202b",
      "commandCenter.border": "#e7e7e799",
      "sash.hoverBorder": "#ff3333",
      "statusBar.background": "#ff0000",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#ff3333",
      "statusBarItem.remoteBackground": "#ff0000",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "titleBar.activeBackground": "#ff0000",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#ff000099",
      "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.remoteColor": "red",
    "files.exclude": {
      ".angular/cache/19.0.6/sakai-ng": false,
      ".angular": false,
      "vercel.json": false,
      "tsconfig.spec.json": false,
      "tsconfig.json": false,
      "tsconfig.app.json": false,
      "tailwind.config.js": false,
      "README.md": false,
      "package-lock.json": false,
      "LICENSE.md": false,
      "eslint.config.js": false,
      ".prettierrc.json": false,
      ".prettierignore": false,
      ".gitignore": false,
      ".gitattributes": false,
      ".editorconfig": false,
      "node_modules": false,
      "dist": false,
      ".vscode": false,
      "src/assets/demo": false,
      "src/assets/fontawesome-free": false,
      "src/assets/layout": false
    }
}
